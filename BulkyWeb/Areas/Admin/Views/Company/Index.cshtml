@model List<Company>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0  py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    Company List
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="col-12 text-end pb-3">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-square-dotted"></i> Create New Company
            </a>
        </div>
        <table class="table table-bordered table-striped" id="tblCompany">
            <thead>
                <tr>
                    <th>
                        Company Name
                    </th>
                    <th>
                        Phone Number
                    </th>
                    <th>
                       City
                    </th>
                    <th>
                       Country
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>          
        </table>
    </div>
</div>
@section Scripts{
    <script src="~/js/companydt.js"></script>
}

