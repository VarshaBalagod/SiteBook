@model List<Category>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0  py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    Category List
                </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="col-12 text-end pb-3">
            <a asp-controller="Category" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-square-dotted"></i> Create New Category
            </a>
        </div>
        <table class="table table-bordered table-striped" id ="tblCategory">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>       
        </table>
    </div>
</div>
@section Scripts{
    <script src="~/js/categorydt.js"></script>
}



