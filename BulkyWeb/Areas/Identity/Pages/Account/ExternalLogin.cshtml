@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Register";
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0  py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">
                    Register
                </h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <h3 class="border-bottom pb-3 mb-4 text-secondary text-center" id="external-login-title">Associate your @Model.ProviderDisplayName account.</h3>
                    <p id="external-login-description" class="text-info">
                        You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>.
                        Please enter an email address for this site below and click the Register button to finish
                        logging in.
                    </p>

                    <div class="row">
                        <div class="col-md-12">
                            <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="row">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                                <div class="form-floating mb-3 col-md-12">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="Please enter your email." />
                                    <label asp-for="Input.Email" class="form-label" ></label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3 col-md-12">
                                    <input asp-for="Input.Name" class="form-control" autocomplete="email" placeholder="Please enter your name." />
                                    <label asp-for="Input.Name" class="form-label"></label>
                                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3 col-md-6">
                                    <input asp-for="Input.StreetAddress" class="form-control" autocomplete="email" placeholder="Please enter your street address." />
                                    <label asp-for="Input.StreetAddress" class="form-label"></label>
                                    <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3 col-md-6">
                                    <input asp-for="Input.City" class="form-control" autocomplete="email" placeholder="Please enter your city." />
                                    <label asp-for="Input.City" class="form-label"></label>
                                    <span asp-validation-for="Input.City" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3 col-md-6">
                                    <input asp-for="Input.Country" class="form-control" autocomplete="email" placeholder="Please enter your county." />
                                    <label asp-for="Input.Country" class="form-label"></label>
                                    <span asp-validation-for="Input.Country" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3 col-md-6">
                                    <input asp-for="Input.PostalCode" class="form-control" autocomplete="email" placeholder="Please enter your postal code." />
                                    <label asp-for="Input.PostalCode" class="form-label"></label>
                                    <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                                </div>
                                <div class="form-floating mb-3 col-md-6">
                                    <input asp-for="Input.Phonenumber" class="form-control" autocomplete="email" placeholder="Please enter your phone number." />
                                    <label asp-for="Input.Phonenumber" class="form-label"></label>
                                    <span asp-validation-for="Input.Phonenumber" class="text-danger"></span>
                                </div>
                                <button type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                            </form>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
