@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-12">
        <form id="profile-form" method="post" class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3 col-md-12">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." disabled />
                <label asp-for="Username" class="mx-2 bg-transparent"></label>
            </div>
            @if (Model.Input.CompanyName != null && Model.Input.CompanyName != "")
            {
                <div class="form-floating mb-3 col-md-12">
                    <input asp-for="Input.CompanyName" class="form-control" placeholder="Please choose your company name." disabled />
                    <label asp-for="Input.CompanyName" class="mx-2 bg-transparent"></label>
                </div>
            }
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." />
                <label asp-for="Input.PhoneNumber" class="mx-2 bg-transparent"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.Name" class="form-control" placeholder="Please enter your full name." />
                <label asp-for="Input.Name" class="mx-2 bg-transparent"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.StreetAddress" class="form-control" placeholder="Please enter your street address." />
                <label asp-for="Input.StreetAddress" class="mx-2 bg-transparent"></label>
                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.City" class="form-control" placeholder="Please enter your city." />
                <label asp-for="Input.City" class="mx-2 bg-transparent"></label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.Country" class="form-control" placeholder="Please enter your county." />
                <label asp-for="Input.Country" class="mx-2 bg-transparent"></label>
                <span asp-validation-for="Input.Country" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3 col-md-6">
                <input asp-for="Input.PostalCode" class="form-control" placeholder="Please enter your postal code." />
                <label asp-for="Input.PostalCode" class="mx-2 bg-transparent"></label>
                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>
            <div class="row">
                <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
